{
  "exclude": [
    "node_modules",
    "./**/*.test.js",
    "./**/*.test.ts",
    "./**/*.test.tsx"
  ],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "strict": false,
    "target": "ESNext",
    "jsx": "preserve",
    "outDir": "lib",
    "declaration": false,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": false,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "suppressExcessPropertyErrors": true
  }
}
